{
    "name": "Bi-LSTM",

    "n_gpu" : 3, 

    "optimizer": {
        "type": "SGD",
        "args":{
            "lr": 1.0,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "weight_init_range": [-0.1, 0.1], 
    "dropout_rate": 0.3,
    "num_layer": 2,
    "emb_dim": 300,
    "hidden_dim": 300,
    "batch_size": 64,
    "epoch": 10,
    "save_period" : 1,
    "grad_clipping": 5.0,
    "stop_threshold": 0.99,
    "remove_models": 1
}